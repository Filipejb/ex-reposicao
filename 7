#include <stdio.h>

int main() {
    int n, termAtual = 0, termAn1 = 0, termAnt2 = 1;
    
    printf("Digite um numero inteiro positivo: ");
    scanf("%d", &n);
    
    if (n == 0) {
        printf("O termo de ordem 0 da sequencia de Fibonacci eh 0\n");
    } else if (n == 1) {
        printf("O termo de ordem 1 da sequencia de Fibonacci eh 1\n");
    } else {
        for (int i = 2; i <= n; i++) {
            termAtual = termAn1 + termAnt2;
            termAn1 = termAnt2;
            termAnt2 = termAtual;
        }
        printf("O termo de ordem %d da sequencia de Fibonacci eh %d\n", n, termAtual);
    }
    
    return 0;
}
